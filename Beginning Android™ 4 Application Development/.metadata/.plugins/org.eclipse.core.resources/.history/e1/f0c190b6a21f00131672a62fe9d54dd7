package net.learn2develop.passingdata;

import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.Menu;
import android.view.View;
import android.widget.Toast;

public class MainActivity extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        
    }

    public void onClick(View v){
    	Intent intent = new Intent("net.learn2develop.PassingDataSecondActivity");
    	// --- use putExtra() to add new name/value pairs---
    	intent.putExtra("str1", "This is a String");
    	intent.putExtra("age1", 12);
    	
    	Bundle bundle = new Bundle();
    	bundle.putString("str2", "This is a String in bundle");
    	bundle.putInt("age2", 123);
    	startActivityForResult(intent, 1);
    }
    
    
    @Override
	protected void onActivityResult(int requestCode, int resultCode, Intent data) {
		// TODO Auto-generated method stub
		super.onActivityResult(requestCode, resultCode, data);
		if(requestCode == 1)
			if (resultCode == RESULT_OK) {
				Toast.makeText(this, getIntent().getStringExtra("age3").toString(), Toast.LENGTH_SHORT).show();
				
			} 

			
	}

	@Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.main, menu);
        return true;
    }
    
}
